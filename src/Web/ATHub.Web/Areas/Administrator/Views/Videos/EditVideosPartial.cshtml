
@{
    ViewData["Title"] = "EditVideosPartial";
}

<form id="editVideoForm" class="mx-auto" method="post" asp-area="Administrator" asp-controller="Videos" asp-action="EditVideo">
    <input type="hidden" id="videoId" name="Id" />
    <div class="form-group ">
        <label for="name" class="text-light">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Name..." name="name" required>
    </div>
    <div class="form-group ">
        <label for="link" class="text-light">Link</label>
        <input type="text" class="form-control" id="link" placeholder="Link..." name="link" required>
    </div>

    <div class="form-group">
        <label for="description" class="text-light">Description</label>
        <textarea class="form-control" id="description" rows="4" placeholder="Description..."
                  name="description"></textarea>
    </div>
    <select class="form-control form-control-sm w-50 justify-content-around" id="category" name="category">
      
    </select>
    <hr class="hr-2  w-50 mt-4" />
</form>

